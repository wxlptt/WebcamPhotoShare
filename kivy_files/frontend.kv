<CameraScreen>:
    GridLayout:
        cols: 1
        padding: 10
        spacing: 10
        Camera:
            id: camera
            resolution: (640, 480)
            source: "Images/Welcome.jpg"
            play: False
            size_hint_y: 0.8
            opacity: 1
        Button:
            id: open_close_camera
            text: 'Open Camera'
            size_hint_y: 0.1
            on_press: root.open_camera() if root.ids.camera.play == False else root.close_camera()
            background_normal: 'Images/normal.png'
            background_down: 'Images/down.png'
            opacity: 0.6

        Button:
            text: 'Capture the camera'
            size_hint_y: 0.1
            on_press: root.capture_camera()
            background_normal: 'Images/normal.png'
            background_down: 'Images/down.png'
            opacity: 0.6

<ImageScreen>:
    GridLayout:
        cols: 1
        padding: 10
        spacing: 10
        Image:
            id: camera_captured
            size_hint_y: 0.7
        GridLayout:
            cols: 2
            size_hint_y: 0.1
            Button:
                text: 'Create sharable link'
                size_hint_x: 0.5
                on_press: root.create_link()
                background_normal: 'Images/normal.png'
                background_down: 'Images/down.png'
                opacity: 0.6

            Button:
                text: 'Back to capture new one'
                size_hint_x: 0.5
                on_press: root.capture_again()
                background_normal: 'Images/normal.png'
                background_down: 'Images/down.png'
                opacity: 0.6

        Label:
            id: file_link
            text: ''
            size_hint_y: 0.1
        GridLayout:
            cols: 2
            size_hint_y: 0.1
            Button:
                text: 'Copy link'
                size_hint_x: 0.5
                on_press: root.copy_link()
                background_normal: 'Images/normal.png'
                background_down: 'Images/down.png'
                opacity: 0.6

            Button:
                text: 'Open Link'
                size_hint_x: 0.5
                on_press: root.open_link()
                background_normal: 'Images/normal.png'
                background_down: 'Images/down.png'
                opacity: 0.6

<RootWidget>:
    canvas.before:
        Color:
            rgba: (0.1, 0.5, 0.55, 1)
        Rectangle:
            pos: self.pos
            size: self.size
    CameraScreen:
        id: camera_screen
        name: 'camera_screen'
    ImageScreen:
        id: image_screen
        name: 'image_screen'
